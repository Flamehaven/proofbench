{
  "token": {
    "color": {
      "background": {
        "primary": {
          "default": { "light": "#FFFFFF", "dark": "#0B1424" },
          "subtle": { "light": "#F4F6FB", "dark": "#1A2D4B" }
        },
        "interactive": {
          "default": { "light": "#0B1424", "dark": "#9FB3D8" },
          "hover": { "light": "#1A2D4B", "dark": "#FFFFFF" }
        },
        "overlay": {
          "default": {
            "light": "rgba(11, 20, 36, 0.65)",
            "dark": "rgba(6, 12, 22, 0.75)"
          }
        }
      },
      "text": {
        "primary": {
          "default": { "light": "#0B1424", "dark": "#F4F6FB" },
          "subtle": { "light": "#1A2D4B", "dark": "#9FB3D8" },
          "muted": { "light": "#606F89", "dark": "#9FB0C6" }
        }
      },
      "status": {
        "success": { "light": "#1F6F4A", "dark": "#2ECC71" },
        "warning": { "light": "#7A1A22", "dark": "#E74C3C" },
        "error": { "light": "#B00020", "dark": "#CF6679" },
        "info": { "light": "#1772B4", "dark": "#64B5F6" },
        "neutral": { "light": "#606F89", "dark": "#9FB0C6" }
      }
    },
    "font": {
      "family": {
        "heading": {
          "locale": {
            "en": "Poppins, 'Segoe UI', sans-serif",
            "ko": "Pretendard, 'Segoe UI', sans-serif"
          }
        },
        "body": {
          "locale": {
            "en": "Roboto, 'Segoe UI', sans-serif",
            "ko": "Pretendard, 'Segoe UI', sans-serif"
          }
        },
        "mono": {
          "default": "Roboto Mono, Consolas, monospace"
        }
      },
      "size": {
        "xs": "12px",
        "sm": "14px",
        "md": "16px",
        "lg": "20px",
        "xl": "24px",
        "2xl": "32px"
      },
      "weight": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      }
    },
    "format": {
      "date": {
        "long": {
          "locale": {
            "en": "MMMM d, yyyy",
            "ko": "yyyy년 M월 d일"
          }
        },
        "short": {
          "locale": {
            "en": "M/d/yy",
            "ko": "yy. M. d."
          }
        }
      },
      "number": {
        "decimal": {
          "locale": {
            "en": "0,0.00",
            "ko": "0,0.00"
          }
        }
      }
    },
    "spacing": {
      "xxs": "2px",
      "xs": "4px",
      "sm": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "24px",
      "xxl": "32px",
      "xxxl": "48px"
    },
    "borderRadius": {
      "sm": "4px",
      "md": "8px",
      "lg": "16px",
      "full": "9999px"
    },
    "shadow": {
      "card": {
        "default": {
          "light": "0 4px 8px rgba(11, 20, 36, 0.10)",
          "dark": "0 4px 12px rgba(0, 0, 0, 0.30)"
        },
        "interactive": {
          "hover": {
            "light": "0 6px 12px rgba(11, 20, 36, 0.15)",
            "dark": "0 6px 16px rgba(0, 0, 0, 0.40)"
          }
        }
      },
      "overlay": {
        "raised": {
          "light": "0 16px 32px rgba(11, 20, 36, 0.25)",
          "dark": "0 20px 40px rgba(0, 0, 0, 0.40)"
        }
      }
    },
    "motion": {
      "duration": {
        "fast": "100ms",
        "moderate": "200ms",
        "slow": "300ms"
      },
      "easing": {
        "linear": "linear",
        "standard": "cubic-bezier(0.4, 0, 0.2, 1)",
        "decelerate": "cubic-bezier(0.0, 0, 0.2, 1)",
        "accelerate": "cubic-bezier(0.4, 0, 1, 1)"
      }
    },
    "opacity": {
      "disabled": 0.4,
      "subtle": 0.7
    },
    "zIndex": {
      "dropdown": 1000,
      "modal": 2000,
      "toast": 3000,
      "overlay": 4000
    }
  }
}
